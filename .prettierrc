{
  "arrowParens": "avoid",
  "bracketSpacing": false,
  "jsxBracketSameLine": true,
  "printWidth": 120,
  "semi": true,
  "singleQuote": true,
  "tabWidth": 2,
  "trailingComma": "all",
  "overrides": [
    {
      "files": ["*.json", ".prettierrc"],
      "options": {
        "parser": "json"
      }
    },
    {
      "files": ["*.mjs", "*.js", "*.jsx", "*.ts", "*.tsx"],
      "options": {
        "parser": "typescript"
      }
    },
    {
      "files": ["*.jsx", "*.tsx", "*.html"],
      "options": {}
    },
    {
      "files": ["*.md"],
      "options": {
        "printWidth": 80
      }
    }
  ]
}
